		row=2;
		column=1;
	}if (digit==9){
		row=2;
		column=2;
	}
	else{
		cout<<"Invalid";
	}
	if(token=='x'&& space[row][column] !='x' && space[row][column]!='0'){
		space[row][column]='x';
		token='0';
	}
	else if(token=='0'&& space[row][column] !='0' && space[row][column]!='x'){
		space[row][column]='0';
		token='x';
	}
	else{
		cout<<"There is no empty space"<<endl;
		func2()
	}
	}
